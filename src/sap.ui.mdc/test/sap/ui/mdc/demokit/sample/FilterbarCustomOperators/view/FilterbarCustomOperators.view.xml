<mvc:View
	height="100%"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:mdc="sap.ui.mdc"
	xmlns:ce="sap.ui.codeeditor"
	controllerName="mdc.sample.controller.FilterbarCustomOperators"
	>

	<f:DynamicPage id="page">
		<f:header>
			<f:DynamicPageHeader id="pageHeader" pinnable="true">
				<mdc:FilterBar
					id="mountainsFilterbar"
					delegate="{ name: 'mdc/sample/delegate/JSONFilterBarDelegate', payload: {}}"
					p13nMode = "Item,Value"
					propertyInfo='[\{"key": "first_ascent", "label": "First Ascent", "path": "first_ascent", "dataType":"sap.ui.model.type.Date", "formatOptions": \{"style": "long"\}, "maxConditions": 1, "visible": true\},
								   \{"key": "rank", "label": "Rank", "path": "rank", "dataType":"sap.ui.model.type.Integer", "formatOptions": \{"emptyString": 0\}, "constraints": \{"minimum": 0\}, "visible": true\}]'
					showAdaptFiltersButton="false"
					filtersChanged="handleFiltersChanged">
					<mdc:filterItems>
						<!-- Rank - Custom operator -->
						<mdc:FilterField
							id="mountainsFilterbar--filter--rank"
							propertyKey="rank"
							delegate="{name: 'sap/ui/mdc/field/FieldBaseDelegate'}"
							operators="SRANGE,NOTSRANGE,EQ">
						</mdc:FilterField>
						<mdc:FilterField
							id="mountainsFilterbar--filter--first_ascent"
							propertyKey="first_ascent"
							delegate="{name: 'sap/ui/mdc/field/FieldBaseDelegate'}"
							operators="MYNEXTDAYS,EQ">
						</mdc:FilterField>

					</mdc:filterItems>
				</mdc:FilterBar>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<VBox id="contentLayout1" width="100%">
				<VBox>
					<Title id="contentTitle" text="Conditions"/>
					<Label id="inputTextLabel" text="Editor height (px)" labelFor="inputText" />
					<Slider
						id="inputText"
						value="{/editorHeight}"
						min="100"
						enableTickmarks="true"
						max="800"
						step="50"
						class="sapUiMediumMarginBottom"/>
				</VBox>
				<HBox id="contentLayout2" width="100%">
					<VBox id="ConditionsLayout" width="50%">
						<Text id="conditionsLayoutText" text="The following JSON is the output of the conditions of the FilterField." class="sapUiSmallMarginBottom" />
						<ce:CodeEditor
							id="conditionsCodeEditor"
							type="json"
							value="{/conditionsText}"
							editable="false"
							width="100%"
							height="{
								path: '/editorHeight',
								formatter: '.formatter.formatHeight'
							}" />
					</VBox>
					<VBox id="FilterLayout" width="50%">
						<Text id="filterLayoutText" text="The following text is the output of the model filter of the FilterField." class="sapUiSmallMarginBottom" />
						<ce:CodeEditor
							id="filterCodeEditor"
							type="text"
							value="{/modelFilterText}"
							editable="false"
							width="100%"
							height="{
								path: '/editorHeight',
								formatter: '.formatter.formatHeight'
							}" />
					</VBox>
				</HBox>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>