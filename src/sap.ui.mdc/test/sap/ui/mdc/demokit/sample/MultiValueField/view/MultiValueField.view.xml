<mvc:View
		xmlns="sap.m"
		xmlns:mdc="sap.ui.mdc"
		xmlns:mdcField="sap.ui.mdc.field"
		xmlns:mdcvh="sap.ui.mdc.valuehelp"
		xmlns:mdcValueHelpContent="sap.ui.mdc.valuehelp.content"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:form="sap.ui.layout.form"
		controllerName="mdc.sample.controller.MultiValueField">

	<form:SimpleForm id="myForm" layout="ColumnLayout" editable="{path: 'view>/editMode'}">
		<form:toolbar>
			<OverflowToolbar id="myToolbar">
				<Title id="myToolbar-Title" text="MultiValueFields"/>
				<ToolbarSpacer  id="myToolbar-Spacer"/>
				<ToggleButton id="myToolbar-Edit" text="Edit" type="Emphasized" pressed="{path: 'view>/editMode'}"/>
			</OverflowToolbar>
		</form:toolbar>

		<Label id="F-VH-label" text="MultiValueField with ValueHelp"/>
		<mdc:MultiValueField id="F-VH"
			items="{path: 'data>/items'}"
			delegate='\{"name": "mdc/sample/delegate/MultiValueFieldDelegate", "payload": \{\}\}'
			display="Description"
			editMode="{= ${view>/editMode} ? 'Editable' : 'Display'}"
			showEmptyIndicator="true"
			valueHelp="VH-Countries">
			<mdcField:MultiValueFieldItem id="F-VH-item" key="{path: 'data>key', type:'sap.ui.model.type.String', constraints: {maxLength: 2}}" description="{path: 'data>description', type:'sap.ui.model.type.String'}" />
		</mdc:MultiValueField>

		<Label id="F4-date-label" text="date Field"/>
		<mdc:MultiValueField id="F4-date"
			items="{path: 'data>/dates'}"
			display="Value"
			editMode="{= ${view>/editMode} ? 'Editable' : 'Display'}"
			showEmptyIndicator="true">
			<mdcField:MultiValueFieldItem id="F4-date-item" key="{path: 'data>date', type:'sap.ui.model.type.Date', formatOptions: {style: 'short'}}" />
		</mdc:MultiValueField>

		<form:dependents>
			<mdc:ValueHelp id="VH-Countries"
				delegate='\{"name": "mdc/sample/delegate/ValueHelpDelegate", "payload": \{"searchKeys": ["key", "name"]\}\}'>
				<mdc:typeahead>
					<mdcvh:Popover id="VH-Countries-Pop">
						<mdcValueHelpContent:MTable id="VH-Countries-Pop-MTable"
							keyPath="key"
							descriptionPath="name"
							caseSensitive="true"
							useAsValueHelp="false">
							<Table id="VH-Countries-Pop-Table" items="{path: 'data>/countries', length: 10}" width="15rem" mode="SingleSelectMaster">
								<columns>
									<Column id="VH-Countries-Pop-Table-col0" width="2rem">
										<Label id="VH-Countries-Pop-Table-col0-header" text="ID"/>
									</Column>
									<Column id="VH-Countries-Pop-Table-col1" width="10rem">
										<Label id="VH-Countries-Pop-Table-col1-header" text="Name"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem id="VH-Countries-Pop-Table-item" type="Active">
										<Text id="VH-Countries-Pop-Table-item-key" text="{path: 'data>key', type:'sap.ui.model.type.String', constraints: {maxLength: 2}}"/>
										<Text id="VH-Countries-Pop-Table-item-name" text="{path: 'data>name', type:'sap.ui.model.type.String'}"/>
									</ColumnListItem>
								</items>
							</Table>
						</mdcValueHelpContent:MTable>
					</mdcvh:Popover>
				</mdc:typeahead>
				<mdc:dialog>
					<mdcvh:Dialog id="VH-Countries-Dialog" title="Countries">
						<mdcValueHelpContent:MTable id="VH-Countries-Dialog-MTable"
							keyPath="key"
							descriptionPath="name"
							caseSensitive="true">
							<Table id="VH-Countries-Dialog-Table" items="{path: 'data>/countries'}" mode="MultiSelect">
								<columns>
									<Column id="VH-Countries-Dialog-Table-col0" width="2rem">
										<Label id="VH-Countries-Dialog-Table-col0-header" text="ID"/>
									</Column>
									<Column id="VH-Countries-Dialog-Table-col1" width="10rem">
										<Label id="VH-Countries-Dialog-Table-col1-header" text="Name"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem id="VH-Countries-Dialog-Table-item" type="Active">
										<Text id="VH-Countries-Dialog-Table-item-key" text="{path: 'data>key', type:'sap.ui.model.type.String', constraints: {maxLength: 2}}"/>
										<Text id="VH-Countries-Dialog-Table-item-name" text="{path: 'data>name', type:'sap.ui.model.type.String'}"/>
									</ColumnListItem>
								</items>
							</Table>
						</mdcValueHelpContent:MTable>
					</mdcvh:Dialog>
				</mdc:dialog>
			</mdc:ValueHelp>
		</form:dependents>
	</form:SimpleForm>
</mvc:View>
