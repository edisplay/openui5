<mvc:View
	height="100%"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:mdc="sap.ui.mdc"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:custom="mdc.sample.controls"
	xmlns:mdcvh="sap.ui.mdc.valuehelp"
	xmlns:mdcValueHelpContent="sap.ui.mdc.valuehelp.content"
	controllerName="mdc.sample.controller.FilterbarCustomContent"
	>

	<f:DynamicPage id="page">
		<f:header>
			<f:DynamicPageHeader id="pageHeader" pinnable="true">
				<mdc:FilterBar
					id="customFilterbar"
					delegate="{ name: 'mdc/sample/delegate/FilterBarDelegate', payload: {}}"
					p13nMode="Item,Value"
					propertyInfo='[\{"name": "descr", "label": "Description (multi-value)", "path": "descr", "dataType":"sap.ui.model.type.String", "visible": true\},
								   \{"name": "status", "label": "Status (single-value)", "path": "status", "dataType":"sap.ui.model.type.String", "maxConditions": 1, "visible": true\},
								   \{"name": "numberWords", "label": "Number of words (single-value)", "path": "numberWords", "dataType":"sap.ui.model.type.Integer", "maxConditions": 1, "visible": true\}]'
					filtersChanged="handleFiltersChanged">
					<mdc:filterItems>
						<!-- Slider (single-value) -->
						<mdc:FilterField id="customFilterbar--filter--numberWords"
							propertyKey="numberWords"
							operators="EQ"
							delegate='\{"name": "sap/ui/mdc/field/FieldBaseDelegate", "payload": \{\}\}'>
							<mdc:contentEdit>
								<Slider id="customFilterbar--filter--numberWords-S" value="{path: '$field>/conditions', type: 'sap.ui.mdc.field.ConditionsType'}" min="0" max="100000"/>
							</mdc:contentEdit>
						</mdc:FilterField>

						<!-- Custom input (multi-value) -->
						<mdc:FilterField id="customFilterbar--filter--descr"
							propertyKey="descr"
							valueHelp="VH-Conditions"
							delegate='\{"name": "sap/ui/mdc/field/FieldBaseDelegate", "payload": \{\}\}'>
							<custom:CustomMultiInput id="customFilterbar--filter--descr-CMI" value="{path: '$field>/conditions', type: 'sap.ui.mdc.field.ConditionsType'}" tokens="{path: '$field>/conditions', templateShareable: false}">
								<Token text="{path: '$field>', type: 'sap.ui.mdc.field.ConditionType'}"/>
							</custom:CustomMultiInput>
						</mdc:FilterField>

						<!-- Custom Input (single-value) -->
						<mdc:FilterField id="customFilterbar--filter--status"
							propertyKey="status"
							operators="EQ"
							delegate='\{"name": "sap/ui/mdc/field/FieldBaseDelegate", "payload": \{\}\}'>
							<custom:CustomSegmentedButton id="customFilterbar--filter--status-SB" conditions="{path: '$field>/conditions', templateShareable: false}">
								<custom:items>
									<SegmentedButtonItem id="customFilterbar--filter--status-SB-planning" text="Planning" key="planning"/>
									<SegmentedButtonItem id="customFilterbar--filter--status-SB-inProcess" text="In Process" key="inProcess"/>
									<SegmentedButtonItem id="customFilterbar--filter--status-SB-done" text="Done" key="done"/>
								</custom:items>
							</custom:CustomSegmentedButton>
						</mdc:FilterField>
					</mdc:filterItems>

					<mdc:dependents>
						<mdc:ValueHelp id="VH-Conditions"
							delegate='\{"name": "sap/ui/mdc/ValueHelpDelegate", "payload": \{\}\}'>
							<mdc:dialog>
								<mdcvh:Dialog id="VH-Conditions-Dialog" title="Description">
									<mdcValueHelpContent:Conditions id="VH-Conditions-Dialog-Conditions" label="Description"/>
								</mdcvh:Dialog>
							</mdc:dialog>
						</mdc:ValueHelp>
					</mdc:dependents>
				</mdc:FilterBar>
			</f:DynamicPageHeader>
		</f:header>

		<!-- Code Editor -->
		<f:content>
			<VBox id="contentLayout">
				<Title id="contentTitle" text="Conditions"/>
				<Text id="contentDescription" text="The following JSON is the output of the FilterField's conditions." class="sapUiSmallMarginBottom" />
				<Label id="inputTextLabel" text="Editor height (px)" labelFor="inputText" />
				<Slider
					id="inputText"
					value="{/editorHeight}"
					min="100"
					enableTickmarks="true"
					max="800"
					step="50"
					class="sapUiMediumMarginBottom"/>
				<ce:CodeEditor
					id="conditionsCodeEditor"
					type="json"
					value="{/conditionsText}"
					editable="false"
					height="{
						path: '/editorHeight',
						formatter: '.formatter.formatHeight'
					}" />
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>