<mvc:View
	height="100%"
	controllerName="sap.m.acc.list.List"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	displayBlock="true">
	<App>
		<NavContainer id="navCon">
			<Page id="overviewPage" title="ACC Test Page for sap.m.List">
				<content>
					<List id="standardListItemList" headerText="List Overview">
						<items>
							<StandardListItem title="Standard List with Icon" type="Navigation" wrapping="true" press="onOverviewListItemPress">
								<customData>
									<core:CustomData
										key="target"
										value="standardListPage" />
								</customData>
							</StandardListItem>
							<StandardListItem title="Standard List with Avatar" type="Navigation" wrapping="true" press="onOverviewListItemPress">
								<customData>
									<core:CustomData
										key="target"
										value="standardListAvatarPage" />
								</customData>
							</StandardListItem>
							<StandardListItem title="Grouped List" type="Navigation" wrapping="true" press="onOverviewListItemPress">
								<customData>
									<core:CustomData
										key="target"
										value="groupedListPage" />
								</customData>
							</StandardListItem>
							<StandardListItem title="Display List" type="Navigation" wrapping="true" press="onOverviewListItemPress">
								<customData>
									<core:CustomData
										key="target"
										value="displayListPage" />
								</customData>
							</StandardListItem>
							<StandardListItem title="Input List" type="Navigation" wrapping="true" press="onOverviewListItemPress">
								<customData>
									<core:CustomData
										key="target"
										value="inputListPage" />
								</customData>
							</StandardListItem>
						</items>
					</List>
				</content>
			</Page>
			<Page
				id="standardListPage"
				title="Standard List with Icon"
				showNavButton="true"
				navButtonPress="onNavBackButtonPress">
				<content>
					<core:Fragment id="sliConfigurationDialog" fragmentName="sap.m.acc.list.fragment.Config" type="XML"/>
					<List
						id="standardListIcon"
						mode="{listConfig>/selectionMode}"
						headerText="Title"
						items="{
							path: 'names>/'
						}"
						itemActionCount="{= ${listConfig>/showRowActions} ? 2 : 0 }"
						itemActionPress=".onItemActionPress">
						<items>
							<StandardListItem
								title="{names>title}"
								type="Active"
								description="{names>desc}"
								icon="{names>icon}"
								iconInset="false"
								highlight="{names>highlight}"
								highlightText=" "
								info="{names>info}"
								infoState="{names>highlight}"
								infoStateInverted="true"
								wrapping="true"
								press="onStandardListIconItemPress">
								<actions>
									<core:Fragment fragmentName="sap.m.acc.list.fragment.Actions" type="XML"/>
								</actions>
							</StandardListItem>
						</items>
					</List>
				</content>
			</Page>
			<Page
				id="standardListAvatarPage"
				title="Standard List with Avatar"
				showNavButton="true"
				navButtonPress="onNavBackButtonPress">
				<content>
					<core:Fragment id="slaConfigurationDialog" fragmentName="sap.m.acc.list.fragment.Config" type="XML"/>
					<List
						id="standardListAvatar"
						mode="{listConfig>/selectionMode}"
						headerText="Employees"
						itemActionCount="{= ${listConfig>/showRowActions} ? 2 : 0 }"
						itemActionPress=".onItemActionPress">
						<items>
							<StandardListItem
								title="Alain Chevalier"
								description="Active avatar with press event handler"
								iconDensityAware="false"
								iconInset="false"
								adaptTitleSize="false"
								wrapping="true">
								<avatar>
									<Avatar
										src="../../images/Alain_Chevalier.png"
										displayShape="Square"
										imageFitType="Cover"
										showBorder="true"
										wrapping="true"
										press="onAvatarPress"/>
									</avatar>
								<actions>
									<core:Fragment fragmentName="sap.m.acc.list.fragment.Actions" type="XML"/>
								</actions>
							</StandardListItem>
							<!-- set this item's description be empty -->
							<StandardListItem
								title="Donna Moore"
								description="Active Avatar with press event handler"
								iconInset="false"
								adaptTitleSize="false"
								wrapping="true">
								<avatar>
									<Avatar
										src="../../images/Donna_Moore.png"
										displayShape="Square"
										showBorder="true"
										press="onAvatarPress"/>
								</avatar>
								<actions>
									<core:Fragment fragmentName="sap.m.acc.list.fragment.Actions" type="XML"/>
								</actions>
							</StandardListItem>
							<StandardListItem
								title="Elena Petrova"
								description="Active Avatar with press event handler"
								iconDensityAware="false"
								iconInset="false"
								adaptTitleSize="false"
								wrapping="true">
								<avatar>
									<Avatar
										src="../../images/Elena_Petrova.png"
										displayShape="Square"
										showBorder="true"
										press="onAvatarPress"/>
								</avatar>
								<actions>
									<core:Fragment fragmentName="sap.m.acc.list.fragment.Actions" type="XML"/>
								</actions>
							</StandardListItem>
							<!-- don't specify a description for this item -->
							<StandardListItem
								title="John Miller"
								description="Non-active Avatar"
								iconDensityAware="false"
								iconInset="false"
								adaptTitleSize="false"
								wrapping="true">
								<avatar>
									<Avatar
										src="../../images/John_Miller.png"
										displayShape="Square"
										showBorder="true"/>
								</avatar>
								<actions>
									<core:Fragment fragmentName="sap.m.acc.list.fragment.Actions" type="XML"/>
								</actions>
							</StandardListItem>
						</items>
					</List>
				</content>
				
			</Page>
			<Page
				id="groupedListPage"
				title="Grouped List"
				showNavButton="true"
				navButtonPress="onNavBackButtonPress" >
				<content>
					<core:Fragment id="glConfigurationDialog" fragmentName="sap.m.acc.list.fragment.Config" type="XML"/>
					<List
						id="groupedList"
						headerText="Products"
						items="{
							path: 'products>/ProductCollection',
							sorter: {
								path: 'products>SupplierName',
								descending: false,
								group: true
							},
							groupHeaderFactory: '.getGroupHeader'
						}"
						mode="{listConfig>/selectionMode}"
						itemActionCount="{= ${listConfig>/showRowActions} ? 2 : 0 }"
						itemActionPress=".onItemActionPress">
						<StandardListItem
							title="{products>Name}"
							description="{products>ProductId}"
							wrapping="true">
							<actions>
								<core:Fragment fragmentName="sap.m.acc.list.fragment.Actions" type="XML"/>
							</actions>
						</StandardListItem>
					</List>
				</content>
			</Page>
			<Page
				id="displayListPage"
				title="Display List"
				showNavButton="true"
				navButtonPress="onNavBackButtonPress" >
				<content>
					<List
						id="displayList"
						binding="{supplier>/SupplierCollection/0}"
						mode="None"
						headerText="Address">
						<DisplayListItem
							label="Name"
							value="{supplier>SupplierName}"/>
						<DisplayListItem
							label="Street"
							value="{supplier>Street} {supplier>HouseNumber}"/>
						<DisplayListItem
							label="City"
							value="{supplier>ZIPCode} {supplier>City}"
							type="Navigation"
							press="onDisplayListItemPress"/>
						<DisplayListItem
							label="Country"
							value="{supplier>Country}"
							type="Navigation"
							press="onDisplayListItemPress"/>
					</List>
				</content>
			</Page>
			<Page
				id="inputListPage"
				title="Input List"
				showNavButton="true"
				navButtonPress="onNavBackButtonPress" >
				<content>
					<List
						id="inputList"
						headerText="Title"
						mode="None">
						<InputListItem label="WLAN" wrapping="true">
							<Switch state="true" />
						</InputListItem>
						<InputListItem label="Flight Mode" wrapping="true">
							<CheckBox selected="true" />
						</InputListItem>
						<InputListItem label="High Performance" wrapping="true">
							<RadioButton
								groupName="GroupInputListItem"
								selected="true" />
						</InputListItem>
						<InputListItem label="Battery Saving" wrapping="true">
							<RadioButton
								groupName="GroupInputListItem" />
						</InputListItem>
						<InputListItem label="Price (EUR)" wrapping="true">
							<Input
								placeholder="Price"
								value="799"
								type="Number" />
						</InputListItem>
						<InputListItem label="Address" wrapping="true">
							<Input
								placeholder="Address"
								value="Main Rd, Manchester" />
						</InputListItem>
						<InputListItem label="Country" wrapping="true">
							<Select>
								<core:Item key="GR" text="Greece" />
								<core:Item key="MX" text="Mexico" />
								<core:Item key="NO" text="Norway" />
								<core:Item key="NZ" text="New Zealand" />
								<core:Item key="NL" text="Netherlands" />
							</Select>
						</InputListItem>
						<InputListItem id="volume" label="Volume" wrapping="true">
							<HBox justifyContent="End">
								<Slider min="0" max="10" value="7" width="200px" ariaLabelledBy="volume-label" />
							</HBox>
						</InputListItem>
					</List>
				</content>
				
			</Page>
		</NavContainer>
		
	</App>
</mvc:View>